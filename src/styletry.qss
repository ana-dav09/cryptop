/* --- Barra Superior --- */
#header {
    background-color:#e42c1f;
    padding: 10px;
    border-radius: 8px;
}
QLabel#logo {
    color: white;
    font-size: 18px;
    font-weight: bold;
}
QPushButton {
    background-color: #34495E;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 5px;
}
QPushButton:hover {
    background-color: #1ABC9C;
}

/* Bot贸n de usuario */
QPushButton#userButton {
    background-color: #E74C3C;
    border-radius: 20px;
    width: 35px;
    height: 35px;
}

/* --- Secci贸n Principal --- */
#mainSection {
    background-color: #ECF0F1;
    border-radius: 10px;
    padding: 20px;
}
#textBlock {
    background-color: white;
    padding: 40px;
    border-radius: 10px;
    font-size: 16px;
    text-align: center;
}
#imageDetail {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    font-size: 14px;
    text-align: center;
}

/* Bot贸n Visualizar */
#viewButton {
    background-color: #3498DB;
    color: white;
    font-weight: bold;
}
#viewButton:hover {
    background-color: #2980B9;
}

/* --- Secci贸n de Plantillas Similares --- */
#similarSection {
    background-color: #BDC3C7;
    padding: 10px;
