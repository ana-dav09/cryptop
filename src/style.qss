/* ðŸŸ¦ INPUT FIELDS */
QLineEdit#inputField {
    border: 2px solid #BDC3C7;
    border-radius: 8px;
    padding: 8px;
    font-size: 14px;
}
QLineEdit#inputField:focus {
    border: 2px solid #3498DB;
}

