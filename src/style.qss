/* --- NAVBAR --- */
#navbar {
    background-color: #2C3E50;
    padding: 10px;
    border-radius: 10px;
}
QLabel#logo {
    color: white;
    font-size: 18px;
    font-weight: bold;
}
QPushButton#navButton, QPushButton#signIn, QPushButton#signUp {
    color: white;
    border-radius: 5px;
    font-size: 14px;
    padding: 10px;
}
QPushButton#signIn:hover, QPushButton#signUp:hover, QPushButton#navButton:hover {
    background-color: #1ABC9C;
}

/* --- CARRUSEL --- */
#carousel {
    background-color: #ECF0F1;
    border-radius: 10px;
    padding: 10px;
}
#carouselCard {
    background-color: white;
    border-radius: 10px;
}
#carouselTitle {
    font-weight: bold;
    font-size: 16px;
}
#carouselDesc {
    font-size: 14px;
}
QPushButton#carouselBtn {
    background-color: #3498DB;
    color: white;
    border-radius: 5px;
}
QPushButton#carouselBtn:hover {
    background-color: #2980B9;
}


